@page
@model Bingo_Card_with_Free_Space.Pages.PrintCardsModel
@{
    ViewData["Title"] = "Bingo Cards";
}

<h2>@Model.Title</h2>

<div id="cards-container">
    @foreach (var card in Model.Cards)
    {
        <div class="card">
            @for (int i = 0; i < Model.Size; i++)
            {
                <div class="row">
                    @for (int j = 0; j < Model.Size; j++)
                    {
                        <div class="cell">
                            @if (Model.FreeSpace && i == Model.Size / 2 && j == Model.Size / 2)
                            {
                                <strong>@Model.FreeSpaceContent</strong>
                            }
                            else
                            {
                                @card[i * Model.Size + j]
                            }
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<style>
    #cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .card {
        border: 1px solid black;
        margin: 10px;
        padding: 10px;
        box-sizing: border-box;
        width: 200px; <!-- Fixed width -->
        height: 200px; <!-- Fixed height -->
    }

    .row {
        display: flex;
    }

    .cell {
        border: 1px solid gray;
        padding: 10px;
        text-align: center;
        flex: 1;
        box-sizing: border-box;
        font-size: calc(100% / @Model.Size); <!-- Adjust font size based on card size -->
        height: calc(200px / @Model.Size); <!-- Adjust cell height based on card size -->
    }

    @@media print {
        .card {
            width: 3in; <!-- Fixed width for printing -->
            height: 3in; <!-- Fixed height for printing -->
        }

        .cell {
            height: 1in; <!-- Fixed cell height for printing -->
            font-size: 0.5em; <!-- Smaller font size for printing -->
        }

        #cards-container {
            display: block;
        }
    }
</style>